{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "example-deployment"
    },
    "spec": {
      "replicas": 3,
      "selector": {
        "matchLabels": {
          "app": "example-app"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "example-app"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "example-app",
              "image": "index.docker.io/yournamespace/repository",
              "livenessProbe": {
                "httpGet": {
                  "path": "/healthz",
                  "port": 8080
                },
                "initialDelaySeconds": 5,
                "periodSeconds": 5
              }
            }
          ]
        }
      }
    }
  }
  