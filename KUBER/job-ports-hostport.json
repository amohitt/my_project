{
    "apiVersion": "apps/v1",
    "kind": "Job",
    "metadata": {
      "name": "example",
      "namespace": "example-namespace"
    },
    "spec": {
      "template": {
        "spec": {
          "containers": [
            {
              "ports": [
                {
                  "containerPort": 80,
                  "name": "http",
                  "protocol": "TCP"
                },
                {
                  "containerPort": 443,
                  "name": "https",
                  "protocol": "TCP"
                }
              ]
            }
          ]
        }
      }
    }
  }
  