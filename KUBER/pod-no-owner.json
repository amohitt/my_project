{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "name": "my-pod",
      "labels": {
        "app": "my-app"
      },
      "ownerReferences": [
        {
          "apiVersion": "apps/v1",
          "kind": "Deployment",
          "name": "my-deployment",
          "uid": "<deployment-uid>"
        }
      ]
    },
    "spec": {
      "containers": [
        {
          "name": "my-container",
          "image": "nginx",
          "ports": [
            {
              "containerPort": 80
            }
          ]
        }
      ]
    }
  }
  