{
    "apiVersion": "apps/v1",
    "kind": "StatefulSet",
    "metadata": {
      "name": "example-statefulset"
    },
    "spec": {
      "serviceName": "example-service",
      "replicas": 3,
      "selector": {
        "matchLabels": {
          "app": "example-app"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "example-app"
          }
        },
        "spec": {
          "hostAliases": [
            {
              "ip": "127.0.0.1",
              "hostnames": [
                "foo.local",
                "bar.local"
              ]
            }
          ],
          "containers": [
            {
              "name": "example-app",
              "image": "index.docker.io/yournamespace/repository"
            }
          ]
        }
      }
    }
  }
  