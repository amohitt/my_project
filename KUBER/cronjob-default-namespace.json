{
    "apiVersion": "batch/v1",
    "kind": "CronJob",
    "metadata": {
      "name": "example-cronjob",
      "namespace": "default"
    },
    "spec": {
      "schedule": "* * * * *",
      "jobTemplate": {
        "spec": {
          "template": {
            "spec": {
              "containers": [
                {
                  "name": "example-container",
                  "image": "busybox:1.28",
                  "command": [
                    "/bin/sh",
                    "-c",
                    "date; echo Hello from the Kubernetes cluster"
                  ]
                }
              ],
              "restartPolicy": "OnFailure"
            }
          }
        }
      }
    }
  }
  