{
    "apiVersion": "v1",
    "kind": "Pod",
    "spec": {
      "containers": [
        {
          "name": "container-name",
          "image": "index.docker.io/yournamespace/repository",
          "livenessProbe": {
            "tcpSocket": {
              "port": 8080
            },
            "initialDelaySeconds": 5,
            "periodSeconds": 5
          }
        }
      ]
    }
  }
  