{
  "apiVersion": "v1",
  "kind": "Pod",
  "spec": {
    "containers": [
      {
        "name": "container-name",
        "image": "index.docker.io/yournamespace/repository",
        "readinessProbe": {
          "httpGet": {
            "path": "/healthz",
            "port": 8080
          },
          "tcpSocket": {
            "port": 8080
          },
          "exec": {
            "command": [
              "cat",
              "/app/is_ready"
            ]
          },
          "initialDelaySeconds": 5,
          "periodSeconds": 5
        }
      }
    ]
  }
}
