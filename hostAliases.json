{
    "spec": {
        "jobTemplate": {
            "spec": {
                "template": {
                    "spec": {
                        "containers": [
                            {
                                "command": [
                                    "/bin/sh",
                                    "-c",
                                    "date; echo Hello from the Kubernetes cluster"
                                ],
                                "image": "busybox:1.28",
                                "imagePullPolicy": "IfNotPresent",
                                "name": "hello"
                            }
                        ],
                        "hostAliases": null,
                        "restartPolicy": "OnFailure"
                    }
                }
            }
        },
        "schedule": "* * * * *"
    }
}