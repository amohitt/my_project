{
  "apiVersion": "apps/v1",
  "kind": "StatefulSet",
  "spec": {
    "serviceName": "my-service",
    "replicas": 3,
    "selector": {
      "matchLabels": {
        "app": "my-app"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "my-app"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "container-name",
            "image": "index.docker.io/yournamespace/repository",
            "securityContext": {
              "readOnlyRootFilesystem": true
            }
          }
        ]
      }
    }
  }
}
