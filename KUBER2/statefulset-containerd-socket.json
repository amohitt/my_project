{
    "apiVersion": "v1",
    "kind": "Pod",
    "spec": {
      "volumes": [
        {
          "name": "vol",
          "hostPath": {
            "path": "/run/containerd/containerd.sock"
          }
        }
      ],
      "containers": [
        {
          "name": "app",
          "image": "images.my-company.example/app:v1.2.3",
          "volumeMounts": [
            {
              "mountPath": "/run/containerd/containerd.sock",
              "name": "vol"
            }
          ]
        }
      ]
    }
  }
  